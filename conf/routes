# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /                           controllers.Application.index()
GET     /index                           controllers.Application.index()
GET     /add                        controllers.Application.add()
POST    /add                        controllers.Application.doAdd()
GET     /delete                     controllers.Application.delete()
POST    /delete                     controllers.Application.doDelete()
GET     /item                       controllers.Application.item()
GET     /edit                       controllers.Application.edit()
POST    /edit                       controllers.Application.doEdit()
GET     /find                       controllers.Application.find()